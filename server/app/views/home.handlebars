<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.min.js"></script>

{{#if user}}
    <div>
        <!-- Content Header (Page header) -->
        <section >
            <h1>
                Dashboard
            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
          <div class="row">
            <div class="col-md-12">
              <div class="box">
                <div class="box-header with-border">
                  <h3 class="box-title">Cloud Service Provider Configuration Status</h3>
                  <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
                <div class="box-body">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="box-body">
                        <table class="table table-bordered table-hover">
                          <thead>
                          <tr>
                            <th><img src="images/aws-cloud.png" width="64" height="64"></th>
                            <th><img src="images/azure-cloud.png" width="64" height="64"></th>
                            <th><img src="images/google-cloud.png" width="64" height="64"></th>
                          </tr>
                          </thead>
                          <tbody>
                          <tr>
                            <td>
                              <a href="/edituserInfo"><button type="button" class="btn btn-block btn-primary">Setup</button></a>
                            </td>
                            <td>
                              <a href="/"><button type="button" class="btn btn-block btn-primary" disabled>TBA</button></a>
                            </td>
                            <td>
                              <a href="/"><button type="button" class="btn btn-block btn-primary" disabled>TBA</button></a>
                            </td>
                          </tr>
                          </tbody>
                        </table>
                      </div>
                      <div class="overlay" id = "overlayInstanceId">
                        <i class="fa fa-refresh fa-spin"></i>
                      </div>
                      <!-- /.chart-responsive -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                </div>
              </div>
              <!-- /.box -->
            </div>
            <!-- /.col -->
          </div>
          {{#if user.awssetup}}
          <div class="row">
              <div class="col-md-12">
                  <div class="box">
                      <div class="box-header with-border">
                          <h3 class="box-title">AWS Instance States</h3>

                          <div class="box-tools pull-right">
                              <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                              </button>

                              <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                          </div>
                      </div>
                      <div class="box-body">
                          <div class="row">
                              <div class="col-md-12">
                                <div class="box-body">
                                  <table id="awsinstanceData" class="table table-bordered table-striped"></table>
                                </div>
                                <div class="overlay" id = "overlayInstanceId">
                                  <i class="fa fa-refresh fa-spin"></i>
                                </div>
                                  <!-- /.chart-responsive -->
                              </div>
                              <!-- /.col -->
                              <!-- /.col -->
                          </div>
                          <!-- /.row -->
                      </div>
                  </div>
                  <!-- /.box -->
              </div>
              <!-- /.col -->
            </div>
            {{/if}}
        </section>
        <!-- /.content -->
    </div>
    <!-- jQuery 2.2.3 -->
    <!-- page script -->
    {{#if user.awssetup}}
    <script>
    $.get(
      "/kubernetes/describeEc2Instances",
      function(data) {
        $("#awsinstanceData").DataTable(data[0]);
        $("#overlayInstanceId").hide("slow");
      }
    );
    </script>
    {{/if}}
{{else}}
  <div style="height: 600px">
      <h1>Welcome to ScaleX</h1>
    <p>Please sign in to continue!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>
{{/if}}
