{{#if user}}
    <div>
        <!-- Content Header (Page header) -->
        <section >
            <h1>
                Dashboard
            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
          <div class="row">
            <div class="col-md-12">
              <div class="box">
                <div class="box-header with-border">
                  <h3 class="box-title">Cloud Service Provider Configuration Status</h3>
                  <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
                <div class="box-body">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="box-body">
                        <table class="table table-bordered table-hover">
                          <thead>
                          <tr>
                            <th style="text-align: center;"><img src="images/aws-cloud.png" alt="aws" width="64" height="64"></th>
                            <th style="text-align: center;"><img src="images/azure-cloud.png" alt="azure" width="64" height="64"></th>
                            <th style="text-align: center;"><img src="images/google-cloud.png" alt="google" width="64" height="64"></th>
                          </tr>
                          </thead>
                          <tfoot>
                          <tr>
                            <td>
                              {{#if user.awssetup}}
                                <button id="awsStatusButton" type="button" class="btn btn-block btn-warning" disabled>Validating...</button>
                              {{else}}
                                <a href="/edituserInfo"><button type="button" class="btn btn-block btn-primary">Setup</button></a>
                              {{/if}}
                            </td>
                            <td>
                              <a href="/"><button type="button" class="btn btn-block btn-primary" disabled>TBA</button></a>
                            </td>
                            <td>
                              <a href="/"><button type="button" class="btn btn-block btn-primary" disabled>TBA</button></a>
                            </td>
                          </tr>
                          </tfoot>
                        </table>
                      </div>
                      <!-- /.chart-responsive -->
                    </div>
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                </div>
              </div>
              <!-- /.box -->
            </div>
            <!-- /.col -->
          </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- jQuery 2.2.3 -->
    <!-- page script -->
    {{#if user.awssetup}}
    <script>
      $.get(
        "/kubernetes/describeEc2Instances",
        function(data) {
          const awsStatusButton = $("#awsStatusButton");
          if (data instanceof Error) {
            awsStatusButton.removeClass("btn-warning");
            awsStatusButton.addClass("btn-error");
            awsStatusButton.html("Error");
          }
          else
          {
            awsStatusButton.removeClass("btn-warning");
            awsStatusButton.addClass("btn-success");
            awsStatusButton.html("Success");
          }
        }
      );
    </script>
    {{/if}}
{{else}}
  <div style="height: 600px">
      <h1>Welcome to ScaleX</h1>
    <p>Please sign in to continue!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>
{{/if}}
