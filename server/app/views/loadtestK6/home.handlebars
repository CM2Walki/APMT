{{#if user}}
    <div>
        <!-- Content Header (Page header) -->
        <section >
            <h1>
                AWS-Autoscale Dashboard
            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Active Loadtesting Clusters</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8">
                                  <div class="box-body">
                                    <table id="autoscalegroupData"class="table table-bordered table-striped"></table>
                                  </div>
                                  <div class="overlay" id="overlayAutoscaleId">
                                    <i class="fa fa-refresh fa-spin"></i>
                                  </div>
                                    <!-- /.chart-responsive -->
                                </div>
                                <!-- /.col -->
                                <div class="col-md-4">
                                    <p class="text-center">
                                        <strong>Options</strong>
                                    </p>
                                  <table class="table table-bordered text-center">
                                  <tr>
                                    <td>
                                      <a href="/loadtestK6/getUserInfoForDeploy" class="btn btn-block btn-primary">Deploy</a>
                                    </td>
                                    <tr>
                                      <td>
                                        <a href="/loadtestK6/terminate" class="btn btn-block btn-danger">Terminate</a>
                                      </td>
                                    </tr>
                                    </tr>
                                  </table>
                                    <!-- /.progress-group -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- ./box-body -->
                        <!-- /.box-footer -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
          <!-- Main row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- page script -->
    <script>
    $.get(
      "/loadtestK6/describeAwsAutoscaleGroupsCompact",
      function(data) {
        $("#autoscalegroupData").DataTable(data[0]);
        $("#overlayAutoscaleId").hide("slow");
      }
    );
    </script>
{{else}}
  <div style="height: 600px">
      <h1>Welcome to ScaleX</h1>
    <p>Please sign in to continue!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>
{{/if}}

