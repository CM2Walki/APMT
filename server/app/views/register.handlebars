<script type="text/javascript">
  function validateEmail(emailField){
    const reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
    const submitbutton = document.getElementById("submitbutton");
    if (reg.test(emailField.value) === false) {
      emailField.backgroundColor = "red";
      submitbutton.disabled = true;
      return false;
    }
    emailField.backgroundColor = "";
    submitbutton.disabled = false;
    return true;
  }
</script>

<!-- views/signin.handlebars -->
<div>
    <div class="login-box">
        <div class="login-logo">
            <a href="/register"><b>Register To Sign-In</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <form action="/local-reg" method="post">
                <div class="form-group has-feedback">
                    <input type="text" onchange="validateEmail(this);" class="form-control" placeholder="E-Mail" id="username" name="username">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Retype password">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button id="submitbutton" type="submit" class="btn btn-primary btn-block btn-flat" disabled>Register</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a href="/signin" class="text-center">I already have an account</a>

        </div>
        <!-- /.login-box-body -->
    </div>
</div>
