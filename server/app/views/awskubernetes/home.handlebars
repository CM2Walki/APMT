          $("#overlayprovisioning").hide("slow");
          var ctxLatency = document.getElementById('boundaryscale').getContext('2d');
          var myChartLatency = new Chart(ctxLatency, {
            type: 'line',
            data: {
              labels: timestamparr,
              datasets: [{
                label: 'Boundary Scale',
                data: valueresourcealloc,
                borderColor: "blue",
                fill: false
