<script type="text/javascript">
function validateEmail(emailField){
  const reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
  const usernamefield = document.getElementById("username");
  const submitbutton = document.getElementById("submitbutton");
  if (reg.test(emailField.value) === false) {
    usernamefield.backgroundColor = "red";
    submitbutton.disabled = true;
    return false;
  }
  usernamefield.backgroundColor = "";
  submitbutton.disabled = false;
  return true;
}
</script>

<!-- views/signin.handlebars -->
<div>
    <div class="login-box">
        <div class="login-logo">
            <a href="/signin"><b>Sign-In</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form action="/login" method="post">
                <div class="form-group has-feedback">
                    <input type="text" onblur="validateEmail(this);" class="form-control" placeholder="E-Mail" id="username" name="username">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button id="submitbutton" type="submit" class="btn btn-primary btn-block btn-flat" disabled>Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a href="#">I forgot my password</a><br>
            <a href="/register" class="text-center">Create a new account</a>

        </div>
        <!-- /.login-box-body -->
    </div>
</div>
